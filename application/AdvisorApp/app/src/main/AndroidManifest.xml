<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.advisorapp" >

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:name=".AdvisorAppApplication"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name=".view.activities.SplashscreenActivity" android:theme="@style/AppTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.activities.login.LoginActivity" android:label="@string/app_name" />
        <activity android:name=".view.activities.register.SignupActivity" android:theme="@style/AppTheme" />
        <activity android:name=".view.activities.uv.RemainingUvListActivity" android:theme="@style/AppTheme" />
        <activity android:name=".view.activities.uv.UvDetailActivity" android:theme="@style/AppTheme" />
        <activity android:name=".view.activities.uv.AddUvActivity" android:theme="@style/AppTheme" />
        <activity android:name=".view.semesters.SemestersActivity" android:theme="@style/AppTheme" />
        <activity android:name=".view.studyplanlist.StudyPlanListActivity" />

    </application>

</manifest>
